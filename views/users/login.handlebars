{{#section 'head'}} 
  <link rel="stylesheet" type="text/css" href="/css/login-signup-styles.css">
{{/section}}

{{>navbar}}

<div id="login-signup-wrapper">
  <div id="user-form-wrapper">
    <h1 class="page-header">Account Login</h1>

    {{#if errors}}
    <div class="error-msg">
      <p>{{errors}}</p>
    </div>
    {{/if}}

    <form class="user-form" method="post" action="/users/login">
      <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" placeholder="Email">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" placeholder="Password">
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
</div>

{{>footer}}